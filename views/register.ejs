<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- ===== Icons ===== -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

    <!-- ===== CSS ===== -->
    <link rel="stylesheet" href="/assets/css/login_register.css">

    <title>Registration Form</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/habibmhamadi/multi-select-tag/dist/css/multi-select-tag.css">
</head>

<body class="team spad set-bg" data-setbg="static/img/blog/blog-5.jpg"
    style="background-image: url(&quot;static/img/blog/blog-5.jpg&quot;);">

    <div class="container">
        <!-- Registration Form -->
        <div class="form">
            <span class="title"> Registration</span>

            <form action="/auth/register" method="post" enctype="multipart/form-data">
                <div class="input-field">
                    <input type="text" placeholder="Enter your name" name="name" required>
                    <i class="bi bi-person"></i>
                </div>
                <div class="input-field">
                    <input type="text" placeholder="Enter your email" name="email" required>
                    <i class="bi bi-envelope icon"></i>
                </div>
                <div class="input-field">
                    <input type="password" class="password" placeholder="Create a password" name="password" required>
                    <i class="bi bi-lock icon"></i>
                </div>
                    
                <!--{% if college_list  %} -->
                <div style="margin-top: 32px;">
                    <select name="collegeName" id="college" >
                      <option value="" selected hidden>Select Your College</option>
                      <% for (var i = 0; i < colleges.length;  i++ ) { %>
                        <option value="<%= colleges[i] %>"> <%= colleges[i] %> </option>
                    <% } %>
                    </select>
                </div>

                <div style="margin-top: 32px;">
                    <select name="major" id="major" >
                      <option value="" selected hidden>Select Your Major</option>
                      <% for (var i = 0; i < majors.length;  i++ ) { %>
                        <option value="<%= majors[i] %>"> <%= majors[i] %> </option>
                    <% } %>
                    </select>
                </div>
                <br>
                
                <div class="form-group">
                    <label for="exampleFormControlFile1">Choose a profile</label>
                    <input type="file" name = "profile" accept="image/*" class="form-control-file" id="exampleFormControlFile1">
                </div>
                
                <div class="checkbox-text">
                    <div class="checkbox-content">
                        <input type="checkbox" id="termCon">
                        <label for="termCon" class="text">I accepted all terms and conditions</label>
                    </div>
                </div>

                <div class="input-field button">
                    <input type="submit" value="Signup">
                </div>   
            </form>

            <div class="login-signup">
                <span class="text">Already a member?
                    <a href="'/auth/login" class="text">Login Now</a>
                </span>
            </div>
        </div>
    </div>


</body>
<script src="https://cdn.jsdelivr.net/gh/habibmhamadi/multi-select-tag/dist/js/multi-select-tag.js"></script>
<script>
  new MultiSelectTag('college');
  new MultiSelectTag('major');
</script>
</html>